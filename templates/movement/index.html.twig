{% extends 'base.html.twig' %}

{% block title %}Movement index{% endblock %}

{% block body %}
    <h1>Movement index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Object</th>
                <th>Value</th>
                <th>Date</th>
                <th>Credit</th>
                <th>Reccurent</th>
                <th>Recurrence</th>
                <th>Comment</th>
                <th>Valued</th>
                <th>Method</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for movement in movements %}
            <tr>
                <td>{{ movement.id }}</td>
                <td>{{ movement.Object }}</td>
                <td>{{ movement.Value }}</td>
                <td>{{ movement.Date ? movement.Date|date('Y-m-d') : '' }}</td>
                <td>{{ movement.Credit ? 'Yes' : 'No' }}</td>
                <td>{{ movement.Reccurent ? 'Yes' : 'No' }}</td>
                <td>{{ movement.Recurrence }}</td>
                <td>{{ movement.Comment }}</td>
                <td>{{ movement.Valued ? 'Yes' : 'No' }}</td>
                <td>{{ movement.Method }}</td>
                <td>
                    <a href="{{ path('app_movement_show', {'id': movement.id}) }}">show</a>
                    <a href="{{ path('app_movement_edit', {'id': movement.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="11">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_movement_new') }}">Create new</a>
{% endblock %}
